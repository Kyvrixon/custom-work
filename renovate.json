{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "schedule": [
        "at any time"
      ],
      "matchPackageNames": [
        "*"
      ]
    }
  ],
  "dependencyDashboard": true,
  "rangeStrategy": "bump",
  "automerge": true,
  "automergeType": "pr"
}
